<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="real" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity BookingEvent.
    -->
    <changeSet id="201805111033" author="lgangloff">
        <createTable tableName="BOOKING_EVENT">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="event_date" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
                        
            <column name="event_type" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            
            <column name="user_login" type="varchar(100)">
                <constraints nullable="false"/>
            </column>      
            <column name="user_display_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>            
            <column name="user_id" type="bigint">
            	<constraints nullable="false" />
            </column>            
            
            <column name="booking_start_date" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>            
            <column name="booking_owner_login" type="varchar(100)">
                <constraints nullable="false" />
            </column>              
            <column name="booking_owner_display_name" type="varchar(200)">
                <constraints nullable="false" />
            </column>            
            <column name="booking_time_slot_type_name" type="varchar(200)">
                <constraints nullable="false" />
            </column>            
            <column name="booking_id" type="bigint">
            	<constraints nullable="false" />
            </column>
            
            <column name="box_id" type="bigint">
            	<constraints nullable="false" />
            </column>
            
        </createTable>
    
        <addForeignKeyConstraint baseColumnNames="box_id"
                                 baseTableName="BOOKING_EVENT"
                                 constraintName="fk_booking_event_box_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CROSSFITBOX"/>

    </changeSet>
</databaseChangeLog>
