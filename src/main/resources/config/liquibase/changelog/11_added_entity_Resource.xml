<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="real" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>


    <changeSet id="201704020913" author="lgangloff">

        <createTable tableName="RESOURCE">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            
            <column name="color" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="box_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(100)"/>
            <column name="last_modified_date" type="timestamp"/>
            
        </createTable>		
  		<createIndex indexName="idx_resource_name_box"
            tableName="RESOURCE"
            unique="true">
            <column name="name"/>
            <column name="box_id"/>
        </createIndex>
        <addForeignKeyConstraint baseColumnNames="box_id"
                         baseTableName="RESOURCE"
                         constraintName="fk_resource_box_id"
                         referencedColumnNames="id"
                         referencedTableName="CROSSFITBOX"/>
                         
                         
                         
                         

        <createTable tableName="RESOURCE_EXCLUSION">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="resource_id" type="bigint"/>
                        
            <column name="start_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
            <column name="end_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
            
            <column name="created_by" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(100)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="resource_id"
                                 baseTableName="RESOURCE_EXCLUSION"
                                 constraintName="fk_resource_exclusion_resource_id"
                                 referencedColumnNames="id"
                                 referencedTableName="RESOURCE"/>
                           

	
        <createTable tableName="RESOURCE_BOOKING">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="resource_id" type="bigint"/>
            <column name="member_id" type="bigint"/>
                        
            <column name="start_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
            <column name="end_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
            
            <column name="created_by" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(100)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="resource_id"
                                 baseTableName="RESOURCE_BOOKING"
                                 constraintName="fk_resource_booking_resource_id"
                                 referencedColumnNames="id"
                                 referencedTableName="RESOURCE"/>    
                                 
        <addForeignKeyConstraint baseColumnNames="member_id"
                                 baseTableName="RESOURCE_BOOKING"
                                 constraintName="fk_resource_booking_member_id"
                                 referencedColumnNames="id"
                                 referencedTableName="MEMBER"/>                  
                         
    </changeSet>
</databaseChangeLog>
